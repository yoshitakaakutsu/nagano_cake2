<%= render 'admin/header' %>

<div class="container">

  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2">ジャンル編集</h3>

  <%= form_with model: @genre, url: update_genere_path(@genre.id), method: :patch do |f| %>
  <form class="form-horizontal">
    <div class="form-group field mb-2">
      <%= f.label :ジャンル名, class: "col-md-3 col-form-label" %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class: "col-md-3 btn btn-success ml-4" %>
    </div>
  </form>
  <% end %>