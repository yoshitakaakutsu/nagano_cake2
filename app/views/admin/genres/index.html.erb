<h2>ジャンル一覧・追加</h2>

  <%= form_with model: @genre do |f| %>
    <h4>ジャンル名</h4>
      <%= f.text_area :name %>
      <%= f.submit '新規登録' %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_genre_path(genre.id) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>