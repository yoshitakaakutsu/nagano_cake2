<%= render 'admin/header' %>


<div class="container">

  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-3">ジャンル一覧・追加</h3>

  <%= form_with model: @genre do |f| %>
  <form class="form-horizontal">
    <div class="form-group field mb-2">
      <%= f.label :ジャンル名, class: "col-md-2 col-form-label" %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "col-md-2 btn btn-success ml-5" %>
    </div>
  </form>
  <% end %>

  <table class="table col-4">
    <thead>
      <tr>
        <th class="table-secondary pl-5" colspan="2">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_genre_path(genre.id), class: "col-md-7 btn btn-success" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>