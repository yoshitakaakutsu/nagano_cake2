<%= render 'admin/header' %>


<div class="container">
  <div class="row">
    <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2">商品一覧</h3>
    <%= link_to admin_products_new_path do %>
      <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div>

  <table class="table">
    <head>
      <tr>
        <th class="table-secondary">商品ID</th>
        <th class="table-secondary">商品名</th>
        <th class="table-secondary">税抜価格</th>
        <th class="table-secondary">ジャンル</th>
        <th class="table-secondary">ステータス</th>
      </tr>
    </head>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, products_show_path(product.id) %></td>
        <td><%= product.price.to_s(:delimited) %></td>
        <td><%= product.genre.name %></td>
        <td><%= product.is_active %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>