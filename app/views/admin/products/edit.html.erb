<h2>商品編集</h2>

 <%= form_with model: @product, url: update_product_path(@product.id), method: :patch do |f| %>
  <h4>商品画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
    <%= f.text_field :name %>
  <h4>商品説明</h4>
    <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  　<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
  <h4>税抜価格</h4>
  　<%= f.text_field :price %>
  <h4>販売ステータス</h4>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中" %>

  <%= f.submit '変更を保存' %>
 <% end %>