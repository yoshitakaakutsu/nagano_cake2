<%= render 'admin/header' %>

<div class="container">
  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>

<table class="table table-borderless" style="hight: 150">
  <tr>
    <th style="width: 20%">会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.adress %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
  </tr>
  <tr>
    <th></th>
    <td>
      <%= link_to "編集する", admin_customers_edit_path, class: "btn btn-success" %>
      <%= link_to "注文履歴一覧に戻る", admin_homes_path, class: "btn btn-primary offset-md-2" %>
    </td>
  </tr>

</table>
