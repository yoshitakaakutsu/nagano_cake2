<%= render 'admin/header' %>

<div class="container">

  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>


  <%= form_with model: @customer, url: update_admin_customers_path(@customer.id), method: :patch do |f| %>
  <form class="form-horizontal">
    <div class="form-group field mb-2">
      <%= f.label :会員ID, class: "col-md-3 col-form-label" %>
      <%= @customer.id %>
    </div>
    <div class="form-group field mb-2">
      <%= f.label :氏名, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group field mb-2">
      <%= f.label :フリガナ, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="form-group field mb-2">
      <%= f.label :郵便番号, class: "col-md-3 col-form-label" %>
      <%= f.text_field :postal_code %>
  　</div>
  　<div class="field form-group mb-2">
      <%= f.label :住所, class: "col-md-3 col-form-label" %>
      <%= f.text_field :adress, class: "col-5" %>
    </div>
    <div class="field form-group mb-2">
      <%= f.label :電話番号, class: "col-md-3 col-form-label" %>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="field form-group mb-2">
      <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
      <%= f.email_field :email %>
    </div>
  　<div class="form-group field mb-2">
      <%= f.label :販売ステータス, class: "col-md-3 col-form-label" %>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true, class: "ml-4" %>
      <%= f.label :is_deleted, "退会" %>
    </div>

    <%= f.submit '変更を保存', class: "col-md-2 btn btn-success offset-md-3" %>
  </form>
  <% end %>



</div>


