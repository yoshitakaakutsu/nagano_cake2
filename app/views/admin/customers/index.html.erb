<%= render 'admin/header' %>

<div class="container">

<h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-2">会員一覧</h3>

<table class="table col-10 offset-md-1">
  <thead>
    <tr>
      <th class="table-secondary">会員ID</th>
      <th class="table-secondary">氏名</th>
      <th class="table-secondary">メールアドレス</th>
      <th class="table-secondary">ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customers_show_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted ? '退会' : '有効' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <div class="col-md-10 offset-5">
    <%= paginate @customers %>
  </div>

  </div>