<%= render 'public/header' %>


<div class=container>
  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-3">配送先登録/一覧</h3>

  <%= form_with model: @adress do |f| %>

    <div class="field form-group">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-3 col-form-label" %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="field form-group">
      <%= f.label :住所, class: "col-3 col-form-label" %>
      <%= f.text_field :adress, class: "col-5" %>
    </div>


    <div class="field form-group">
      <%= f.label :氏名, class: "col-3 col-form-label" %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-success text-right offset-md-3" %>

  <% end %>

  <table class="table table-bordered col-sm-8">
    <thead>
      <tr>
        <th class="table-secondary">郵便番号</th>
        <th class="table-secondary" style="width: 40%">住所</th>
        <th class="table-secondary">宛名</th>
        <th class="table-secondary" colspan="２" style="width: 30%"></th>
      </tr>
    </thead>

    <tbody>
      <% @adresses.each do |adress| %>
      <tr>
        <td>
          <%= adress.postal_code %>
        </td>
        <td>
          <%= adress.adress %>
        </td>
        <td>
          <%= adress.name %>
        </td>
        <td>
          <%= link_to "編集する", adress_edit_path(adress.id), class: "btn btn-success" %>
          <%= link_to "削除する", destroy_adress_path_path(adress.id), method: :delete,class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>

    </div>
