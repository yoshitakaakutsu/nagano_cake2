<%= render 'public/header' %>

<div class="container">


  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-2">注文履歴一覧</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="table-secondary">注文日</th>
      <th class="table-secondary" style="width: 40%">配送先</th>
      <th class="table-secondary" style="width: 15%">注文商品</th>
      <th class="table-secondary" >支払金額</th>
      <th class="table-secondary">ステータス</th>
      <th class="table-secondary">注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
      </td>
      <td>
        <% order.oder_details.each do |order_detail| %>
          <%= order_detail.product.name %></br>
        <% end %>
      </td>
      <td><%= (order.total_payment).to_s(:delimited) %>円</td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_show_path(order.id), class: "btn btn-primary" %>
    <% end %>
  </tbody>
</table>

</div>