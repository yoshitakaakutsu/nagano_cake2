<%= render 'public/header' %>

<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %></br>
          <%= order.adress %>
      </td>
      <td><%= order.item.name %></td>
      <td><%= order.total_payment %></td>
      <td></td>
      <td><%= link_to "表示する", order_show_path(order.id) %>
    <% end %>
  </tbody>
</table>