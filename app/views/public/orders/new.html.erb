<%= render 'public/header' %>


<h2>注文情報入力</h2>

<%= form_with model: @order, url: order_confirm_path, method: :post do |f| %>
  <p>支払方法</p>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  <p>お届け先</p>
    <p>
      <%= f.radio_button :address, "0" %>
      <%= f.label :address, "ご自身の住所", value: 0 %></br>
      〒<%= @customer.postal_code %>
      <%= @customer.adress %>

    </p>
    <p>
      <%= f.radio_button :address, "1" %>
      <%= f.label :address, "登録済み住所から選択", value: 1 %>
      <%= f.select :adress_id, options_from_collection_for_select(Adress.all, :id, :address_display) %>
    </p>
    <p>
      <%= f.radio_button :address, "2" %>
      <%= f.label :address, "新しいお届け先", value: 2 %>

      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>

      <%= f.label :住所 %><br />
      <%= f.text_field :adress, autofocus: true, autocomplete: "adress" %>

      <%= f.label :宛名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
     </p>

     <%= f.submit "確認画面へ進む" %>

<% end %>


