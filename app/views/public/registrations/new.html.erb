<%= render 'public/header' %>

<div class="container">
  <div class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2">
    <h3>新規会員登録</h3>
  </div>



  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <form class="form-horizontal">
  <div class="form-group field mb-2">
    <%= f.label :名前, class: "col-md-3 col-form-label" %>
    (性)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="form-group field mb-2">
    <%= f.label :フリガナ, class: "col-md-3 col-form-label" %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>


  <div class="form-group field mb-2">
    <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group field mb-2">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="form-group field mb-2">
    <%= f.label :住所, class: "col-md-3 col-form-label" %>
    <%= f.text_field :adress, autofocus: true, autocomplete: "adress" %>
  </div>

    <div class="form-group field mb-2">
    <%= f.label :電話番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="form-group field mb-2">
    <%= f.label :パスワード, class: "col-md-3 col-form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group field mb-2">
    <%= f.label :パスワード（確認用）, class: "col-md-3 col-form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group row actions">
    <%= f.submit "新規登録", class: "col-md-3 btn btn-success" %>
  </div>
<% end %>
</div>

<div class="container">
  <div class="ml-3 mt-3 mb-4">
    <h3>既に登録済みの方</h3>
  </div>
  <p class="ml-5"><%= link_to "こちら",  new_customer_session_path%>からログインしてください</p>
</div>
