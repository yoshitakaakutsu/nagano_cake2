<%= render 'public/header' %>

<div class="container">
  <div class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-2">
    <h3>会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url: customer_update_path, method: :patch do |f| %>

  <form class="form-horizontal">
    <div class="field form-group ml-5">
      <%= f.label :名前, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "ml-5" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "ml-5" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :フリガナ, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "ml-5" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "ml-5" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "ml-5" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :住所, class: "col-md-3 col-form-label" %>
      <%= f.text_field :adress, autofocus: true, autocomplete: "adress", class: "ml-5" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :電話番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "ml-5" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-5" %>
    </div>

    <div class="row">

        <%= f.submit "編集内容を保存", class: "btn btn-success offset-md-4 col-3" %>
        <%= link_to  "退会する", unsubscribe_path,class: "btn btn-danger offset-md-2" %>

    </div>
  </form>
<% end %>
</div>