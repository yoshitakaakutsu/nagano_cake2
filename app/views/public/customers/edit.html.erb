<%= render 'public/header' %>

<div class="container">
  <div class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2">
    <h3>会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url: customer_update_path, method: :patch do |f| %>

  <form class="form-horizontal">
    <div class="field form-group ml-5">
      <%= f.label :名前, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :フリガナ, class: "col-md-3 col-form-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :住所, class: "col-md-3 col-form-label" %>
      <%= f.text_field :adress, autofocus: true, autocomplete: "adress" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :電話番号（ハイフンなし）, class: "col-md-3 col-form-label" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>

    <div class="field form-group ml-5">
      <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="row">
      <div class="actions form-group">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>

      <%= link_to  "退会する", unsubscribe_path,class: "btn btn-danger" %>
    </div>
  </form>
<% end %>
</div>